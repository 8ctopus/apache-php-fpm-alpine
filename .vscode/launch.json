    "version": "0.2.0",
    "configurations": [
        {
            "name": "listen xdebug 9001",
            "type": "php",
            "request": "launch",
            "port": 9001,
            "stopOnEntry": true,
            "pathMappings": {
                "/var/www/site/": "${workspaceRoot}/html/",
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9001
        }
    ]
}